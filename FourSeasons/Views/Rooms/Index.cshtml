@model List<Room>
@{
    ViewData["Title"] = "Номера";
}

<link rel="stylesheet" href="~/css/rooms.css" />

<div class="content">
    <div class="content-rooms">

        <div class="rooms-title">
            <p>Номера</p>
        </div>

        <div class="rooms-list-container">
            <div class="rooms-list">
                @for (int i = 0; i < Model.Count;  i++)
                {
                        <div class="rooms-container">
                            <div class="rooms-slider">
                                
                                <div id="myCarousel" class="carousel-rooms slide" data-ride="carousel" data-interval="3000">
                                    
                                    <div class="carousel-inner" role="listbox">
                                        <div class="item active">
                                            <img src="~/images/rooms/@Url.Content(Model.ElementAt(i).ImgLink1)" class="img-responsive" id="roomId" />
                                            
                                        </div>
                                        <div class="item">
                                            <img src="~/images/rooms/@Url.Content(Model.ElementAt(i).ImgLink2)" class="img-responsive" id="roomId"/>
                                            
                                        </div>
                                        <div class="item">
                                            <img src="~/images/rooms/@Url.Content(Model.ElementAt(i).ImgLink3)" class="img-responsive" id="roomId"/>
                                            
                                        </div>
                                        <div class="item">
                                            <img src="~/images/rooms/@Url.Content(Model.ElementAt(i).ImgLink4)" class="img-responsive" id="roomId"/>
                                           
                                        </div>
                                    </div>                       
                                </div>    
                            </div>

                            <div class="rooms-info">
                                <div class="inner-info">
                                    <div class="title"><p>@Model.ElementAt(i).Type</p></div>
                                    <br />
                                    <p>- Wi-Fi</p>
                                    <p>- Спутниковое телевидение</p>
                                    <p>- Кондиционер</p>
                                    <p>- Холодильник</p>
                                    <p>- Санузел</p>
                                    <br />

                                    <p style="line-height: 25px; font-weight: bold;">Опционально :</p>
                                    <p>- Вид на море +20%</p>
                                    <p>- Балкон +15%</p>
                                    <p>- Мини-бар +1500$</p>

                                    <div class="price"><p>@Model.ElementAt(i).Price$/сутки</p></div>

                                </div>
                            </div>
                        </div>

                    
                   

                    
                }
            </div>


        </div>



    </div>
</div>